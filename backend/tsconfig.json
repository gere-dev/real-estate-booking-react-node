{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "typeRoots": ["node_modules/@types", "./types"],
  
      "paths": {
        "@/*": ["*"],
        "@db*": ["database/config/db"],
        "@controllers": ["controllers/*"],
        "@routes/*": ["routes/*"],
        "@models/*": ["database/models/*"]
      }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
      ]
  }
  